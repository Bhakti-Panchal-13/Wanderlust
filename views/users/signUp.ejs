<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
    <h3 class="col-6 offset-3">SignUp on Wanderlust</h3>
    <div class="col-6 offset-3">
        <form method="POST" action="/signUp"  class="needs-validation" novalidate>
            <div class="mb-3">
                <lable for="username" class="form-lable">Username</lable>
                <input name="username" 
                type="text" 
                id="username"
                class="form-control"
                required/>
                <div class="valid-feedback">Looks good!</div>
             </div>
             <div class="mb-3">
                <lable for="email" class="form-lable">Email</lable>
                <input name="email" 
                type="text" 
                id="email"
                class="form-control"
                required/>
             </div>
             <div class="mb-3">
                <lable for="password" class="form-lable">password</lable>
                <input name="password" 
                type="password" 
                id="password"
                class="form-control"
                required/>
             </div>
             <button class="btn btn-dark add-btn mt-3">SignUp</button>
        </form>
        </div>
        </div>